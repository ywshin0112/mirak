<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="kr.co.mirak.cart.CartMapper">


	<!-- 카트 목록 -->
	<select id="list" resultType="kr.co.mirak.cart.CartVO">
	
		select * from cart
	
	</select>
	
	<!-- CartVO info (int id);  -->
	
	<!-- 카트 추가 -->
	<insert id="insert">
	
		insert into cart(mem_id, name, price, day, count)
		values(#{mem_id}, #{name}, #{price}, #{day}, #{count}) 
	
	</insert>
	
	
	<!-- 카트 수량 수정 -->
	<update id="update">
	
		update cart set count=#{count} where cartId = #{cartId}
	
	</update>

	<!-- 카트 삭제 -->
	<delete id="delete">
	
		delete from cart where cartId = #{cartId}
	
	</delete>
	
  </mapper>